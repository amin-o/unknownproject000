{

	return 2;

}


//Stage (1)
void stage1(int player_health, int player_armor, int player_weapon_slot_1, int player_weapon_slot_2, const char * player_weapon_slot_1_name, const char * player_weapon_slot_2_name, const char * enemy_name, int enemy_health, int enemy_armor)
{

	int cnt;

	for(cnt = 0;cnt < cnt + 1;cnt++)
	{

		printf("--------------------------------------------------------------------------------\n");
		printf("Health:%d\t\t\t\t\t\t\t      %s:%d\n", player_health, enemy_name,enemy_health);		
		printf("\n");
		printf("Weapon:%s\n",player_weapon_slot_1_name);
		printf("Utility:%s\n",player_weapon_slot_2_name);
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("\n");
		printf("--------------------------------------------------------------------------------");

		getch();

	}

}

void main()
{

	//Player Stats

	int player_health = 100;
	int player_armor = 1;


	//Stage (1)

	stage1(player_health, player_armor, player_weapon_slot_1(laser_gun_1()), player_weapon_slot_2(plasma_granade_1()), player_weapon_slot_1_name(laser_gun_1_name()), player_weapon_slot_2_name(plasma_granade_1_name()),guard_1_name(), guard_1_health(),guard_1_armor());

	getch();

}
